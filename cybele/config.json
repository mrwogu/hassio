{
  "name": "Cybele",
  "version": "1.0.1",
  "slug": "cybele",
  "description": "BLE to MQTT Gateway for Smarthome and IoT Devices",
  "url": "https://github.com/ArtistAOP/hassio/tree/main/cybele",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "startup": "application",
  "boot": "auto",
  "host_dbus": true,
  "options": {
    "mqtt": {
      "url": "mqtt://my_user:my_password@core-mosquitto"
    },
    "dongles": [
      {
        "hciDevice": "hci0",
        "mode": "le",
        "services": [],
        "devices": []
      }
    ]
  },
  "schema": {
    "mqtt": {
      "url": "url"
    },
    "dongles": [
      {
        "hciDevice": "str",
        "mode": "str",
        "services": [
          {
            "bus": "str",
            "hciDevice": "str"
          }
        ],
        "devices": [
          {
            "type": "str",
            "friendlyName": "str",
            "mac": "match(^([0-9A-F]{2}:){5}([0-9A-F]{2})$)",
            "productId": "int"
          }
        ]
      }
    ]
  }
}
